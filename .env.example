# ===========================================
# HIREZY Platform Environment Configuration
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/hirezy_dev"

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# NextAuth.js configuration
NEXTAUTH_SECRET="your-secure-random-256-bit-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# Session configuration (in seconds)
NEXTAUTH_SESSION_MAX_AGE=86400
NEXTAUTH_SESSION_UPDATE_AGE=3600

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Frontend API URL (for client-side requests)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Application name
PLATFORM_NAME="Hirezy Platform"

# CORS configuration
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# AI SERVICES (OPTIONAL)
# ===========================================
# OpenAI API configuration
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_ORGANIZATION_ID="your-organization-id"
OPENAI_MODEL="gpt-4o-mini"

# Google AI (Gemini) configuration
GOOGLE_AI_KEY="your-google-ai-api-key"
GOOGLE_AI_MODEL="gemini-pro"

# AI service fallback configuration
AI_PRIMARY_SERVICE="openai"
AI_FALLBACK_SERVICE="google"

# ===========================================
# EMAIL & COMMUNICATION
# ===========================================
# SMTP configuration for email delivery
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Email templates
EMAIL_FROM_NAME="Hirezy Platform"
EMAIL_FROM_ADDRESS="noreply@hirezy.com"

# ===========================================
# FILE STORAGE
# ===========================================
# File upload configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES="pdf,doc,docx,txt"

# Cloud storage (optional)
CLOUD_STORAGE_PROVIDER="local"  # local, aws-s3, google-cloud
AWS_S3_BUCKET="your-s3-bucket"
AWS_S3_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Logging configuration
LOG_LEVEL="info"  # error, warn, info, debug
LOG_FORMAT="json"  # json, simple

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_ENDPOINT="/api/metrics"
ERROR_REPORTING_ENABLED=true

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH="/api/health"

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
# Development mode
NODE_ENV="development"  # development, production, test

# Debug mode
DEBUG=false

# Test database (for testing environment)
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/hirezy_test"

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# Third-party service integrations
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Analytics (optional)
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
MIXPANEL_TOKEN="your-mixpanel-token"

# ===========================================
# SECURITY HEADERS
# ===========================================
# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI="/api/csp-report"

# Security headers
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS="DENY"
X_CONTENT_TYPE_OPTIONS="nosniff"
X_XSS_PROTECTION="1; mode=block"

# ===========================================
# PERFORMANCE OPTIMIZATION
# ===========================================
# Caching configuration
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000

# CDN configuration
CDN_URL="https://cdn.yourdomain.com"
CDN_ENABLED=false

# Image optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=80
IMAGE_FORMATS="webp,avif"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Feature toggles
FEATURE_AI_ASSISTANT=true
FEATURE_GAMIFICATION=true
FEATURE_MARKET_INTELLIGENCE=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_APP=false

# ===========================================
# DEPLOYMENT SPECIFIC
# ===========================================
# Vercel deployment
VERCEL_URL="your-project.vercel.app"
VERCEL_ENV="production"

# Railway deployment
RAILWAY_STATIC_URL="your-project.up.railway.app"

# Docker deployment
DOCKER_CONTAINER_NAME="hirezy-platform"
DOCKER_PORT=3000
