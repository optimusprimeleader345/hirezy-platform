# ===================================
# HIREZY ENVIRONMENT CONFIGURATION
# ===================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/hirezy_db?schema=public"

# Authentication Secrets
NEXTAUTH_SECRET="your-super-secure-random-secret-here-make-it-32-chars-or-more"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Social Login (Optional - Configure as needed)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# AI/ML API Keys (Configure at least one provider)

# OpenAI Configuration (Primary AI Provider)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORGANIZATION_ID=""  # Optional
OPENAI_PROJECT_ID=""       # Optional

# Google AI Configuration (Fallback AI Provider)
GOOGLE_AI_API_KEY="your-google-gemini-api-key-here"

# AI Service Configuration
AI_PROVIDER="openai"       # "openai" | "google" | "hybrid" | "mock"
AI_FALLBACK_ENABLED="true" # Enable fallback to Google if OpenAI fails

# Email Service (For notifications and verification)
EmailJS_SERVICE_ID="your-emailjs-service-id"
EmailJS_TEMPLATE_ID="your-emailjs-template-id"
EmailJS_PUBLIC_KEY="your-emailjs-public-key"

# Optional: SMTP Configuration (Alternative to EmailJS)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@hirezy.com"

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_ID_STUDENT="price_student_premium_monthly"
STRIPE_PRICE_ID_RECRUITER="price_recruiter_subscription"

# File Storage (Choose one)

# AWS S3 (Production Recommended)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="hirezy-uploads"

# Cloudflare R2 (Cost-effective alternative)
CLOUDFLARE_R2_ACCESS_KEY_ID=""
CLOUDFLARE_R2_SECRET_ACCESS_KEY=""
CLOUDFLARE_R2_ACCOUNT_ID=""
CLOUDFLARE_R2_BUCKET_NAME="hirezy-files"

# Optional: Supabase Storage
SUPABASE_URL=""
SUPABASE_SERVICE_ROLE_KEY=""
SUPABASE_BUCKET_NAME="hirezy"

# Redis (Optional - For caching and real-time features)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Monitoring & Analytics

# Sentry (Error Tracking)
SENTRY_DSN=""

# LogRocket (User Session Recording)
LOGROCKET_APP_ID=""

# Mixpanel (Analytics)
MIXPANEL_TOKEN=""

# Optional: Hotjar (User Behavior)
HOTJAR_ID=""

# Development Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Analytics & Monitoring
NEXT_PUBLIC_GA_TRACKING_ID=""
NEXT_PUBLIC_HOTJAR_ID=""

# Feature Flags
FEATURE_ADVANCED_AI="true"
FEATURE_GAMIFICATION="true"
FEATURE_MARKET_INTELLIGENCE="true"
FEATURE_SOCIAL_NETWORKING="false"
FEATURE_VIDEO_INTERVIEWS="false"

# Security Settings
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_BURST_SIZE="200"
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Database Connection Pooling
DATABASE_POOL_MIN="2"
DATABASE_POOL_MAX="10"
DATABASE_POOL_IDLE_TIMEOUT="30000"

# Cache Configuration
CACHE_TTL_MINUTES="15"
REDIS_CACHE_PREFIX="hirezy:"

# External API Timeouts (in milliseconds)
EXTERNAL_API_TIMEOUT="10000"
AI_MODEL_TIMEOUT="30000"

# ===================================
# ADVANCED CONFIGURATION
# ===================================

# Resume ATS Analysis
ATS_KEYWORD_API_ENABLED="true"
ATS_INDUSTRY_DATABASE_PATH="./data/ats-industries.json"

# Market Intelligence
MARKET_DATA_UPDATE_INTERVAL_MINUTES="30"
SALARY_DATA_SOURCE="levels.fyi/mercury.data"
SKILL_DEMAND_API_URL=""

# Gamification Settings
GAMIFICATION_ENABLED="true"
XP_MULTIPLIER_FOR_STREAKS="1.5"
ACHIEVEMENT_UNLOCK_DELAY_MS="2000"

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED="true"
PUSH_NOTIFICATIONS_ENABLED="false"
SMS_NOTIFICATIONS_ENABLED="false"

# Compliance & Security
GDPR_ENABLED="true"
DATA_RETENTION_DAYS="2555"  # 7 years
AUDIT_LOG_ENABLED="true"
ENCRYPTION_KEY_ROTATION_DAYS="90"

# Development & Debugging
VERBOSE_LOGGING="false"
DEBUG_AI_RESPONSES="false"
MOCK_AI_RESPONSES="false"  # Use for testing without API keys

# ===================================
# DEPLOYMENT SPECIFIC
# ===================================

# Vercel Deployment
VERCEL_URL=""
VERCEL_TEAM_ID=""

# Production Database (Different from dev)
PRODUCTION_DATABASE_URL=""

# CDN Configuration
CDN_URL=""
CDN_PURGE_API_KEY=""

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Monitoring Alerts
ALERT_EMAIL="admin@hirezy.com"
CPU_THRESHOLD="80"
MEMORY_THRESHOLD="85"
DISK_THRESHOLD="90"
